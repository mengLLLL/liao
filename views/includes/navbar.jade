.m-navbar
	input#userId(value="#{session.user.userId}" hidden='true')
	input#userName(value="#{session.user.nickName}" hidden='true')
	- console.log('session',session.team)
	.nav-left
		a.fa.fa-bars#teamSet(href="#") &nbsp; #{session.team.teamName}
		ul.team-setting.arrow-top#teamSetting
			li
				a.fa.fa-exchange#exchangeTeam(href="#") &nbsp;切换团队
			li
				a.fa.fa-mail-forward#joinTeam(href='#') &nbsp;加入团队
			li
				a.fa.fa-plus-circle(href='/new/team') &nbsp;创建团队
	ul.nav-right
		li
			div.avatar#avatar(href="#")
				- console.log('session avatar', session.user.avatar)
				img(src='#{session.user.avatar}')
			ul.user-setting.arrow-top#userSetting
				li
					a.fa.fa-cogs(href="/setting/user") &nbsp;账号设置
				li
					a.fa.fa-sign-out(href="/logout") &nbsp;退出登录
		li
			a.fa.fa-bell-o(href="/message/all" data-toggle='tooltip' data-placement="bottom" title="消息")
			span.new-msg
			if msg
				span.new-msg
		li
			a.fa.fa-list-alt(href="/statistics" data-toggle='tooltip' data-placement="bottom" title="统计")
		li
			a.fa.fa-home(href="/liao" data-toggle="tooltip" data-placement="bottom" title="首页")
	.shade#exchangeTeamShade
		form( name="exchangeTeam")
			.header 切换团队
			.team-list#teamList
	.shade#joinNewTeam
		form
			.header 加入新团队
			.input-group
				label 团队名称
				input(name="teamName", placeholder="请输入团队名称")
			button.m-btn#searchTeam 搜索
			.search-results
			.feedback



